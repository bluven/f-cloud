@host = 127.0.0.1:8787
@contentType = application/json
@token={{$dotenv TOKEN}}

###
# @prompt username
# @prompt password
POST http://{{host}}/v1/auth/login HTTP/1.1
Content-Type: {{contentType}}

{
    "username": "{{username}}",
    "password": "{{password}}"
}

###
POST http://{{host}}/v1/auth/refresh-token HTTP/1.1
Content-Type: {{contentType}}
Authorization: Bearer {{token}}

{}